rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /documents/{workerId}/{fileName} {
      function isAuthenticated() {
        return request.auth != null;
      }

      function isValidFile() {
        return request.resource.size <= 5 * 1024 * 1024
          && (
            request.resource.contentType.matches('application/pdf') ||
            request.resource.contentType.matches('image/jpeg') ||
            request.resource.contentType.matches('image/png')
          );
      }

      function hasUploadPermission() {
        return isAuthenticated() && 
          (request.resource.metadata.role == 'owner' ||
           request.resource.metadata.role == 'subscriber' ||
           request.resource.metadata.role == 'collaborator');
      }

      // Permitir lectura a usuarios autenticados
      allow read: if isAuthenticated();
      
      // Permitir escritura a usuarios con permisos y archivos válidos
      allow create, update: if hasUploadPermission() && isValidFile();
      
      // Permitir eliminación solo a usuarios con permisos
      allow delete: if hasUploadPermission();
    }
  }
}